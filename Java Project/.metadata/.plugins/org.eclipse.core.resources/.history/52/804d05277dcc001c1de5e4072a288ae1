package com.qa.mortgage;

import java.util.Scanner;

public class MortgageCalculator {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("Insert yearly intrest rate: ");
		float yearlyIntrestRate = scanner.nextFloat();
		System.out.print("Insert loan ammount:");
		double loan = scanner.nextDouble();
		System.out.print("Insert Duration in years:");
		int years = scanner.nextInt();
		int months = 12;
		int n= months * years;
		float r = yearlyIntrestRate / months;
		
		double top=Math.pow((1+r), n);
		double m= loan*(r*top/(top-1));
		System.out.println("Your monthly playment will be £" + m);
		double total= m*n;
		System.out.println("Your total payment is £" + total);
		System.out.println("Profit made from intrest is £" + (total-loan));	
	}
	

}
